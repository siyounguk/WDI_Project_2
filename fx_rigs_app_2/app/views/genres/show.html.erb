<p id="notice"><%= notice %></p>

<p>
  <strong>Genre name:</strong>
  <%= @genre.genre_name %>
</p>



<p>
  <strong>Rigs:</strong>
  <ul>
    <% @genre.rigs.each do |rig| %>
      <li>
      
        <%= link_to rig.guitarist, rig %>
      </li>
    <% end %>
  </ul>
</p>

<% if user_signed_in? && current_user.role = "admin" %>
  <%= link_to 'Edit', edit_genre_path %> |
  <%= link_to 'Back', genres_path %>
<% end  %>
