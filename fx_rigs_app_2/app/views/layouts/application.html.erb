<!DOCTYPE html>
<html>
<head>
  <title>FxRigsApp2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>FX:Rigs</header>

<p><%= link_to "home", root_path %></p>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
      Hola <%= link_to current_user.email, edit_user_registration_path%>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Login", new_user_session_path %> |
      <%= link_to "Signup |",new_user_registration_path %> 
    <% end %>
    <%= link_to "Rigs",rigs_path %> |
    <%= link_to "New Rig", new_rig_path if user_signed_in? %>
    <%= link_to "Pedals",pedals_path %>
    <%= link_to "Genres",genres_path %>

    <%= form_tag( results_path, method: "get") do %>
      <%= label_tag(:q, "Search Rigs:") %>
      <%= text_field_tag(:q) %>
    <% end %>


<%= yield %>

</body>
</html>
