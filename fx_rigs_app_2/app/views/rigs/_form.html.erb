      <h2><%= pluralize(@rig.errors.count, "error") %> prohibited this rig from being saved:</h2>

      <ul>
      <% @rig.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="large-12 columns">
  
    <%= f.label :guitarist %><br>
