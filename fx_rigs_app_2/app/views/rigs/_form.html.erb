    </div>
  </div>
  <div class="row">

    <div class="large-4 columns">
      <%= f.label :guitarist_upload_image %><br>
      <%= f.file_field :guitarist_upload_image %>
    </div>
    <div class="large-8 columns">
      <%= f.label :remote_guitarist_upload_image_url %><br />
     <%= f.text_field :remote_guitarist_upload_image_url %>
    </div>
  </div>


  <div class="row">
    <div class="large-4 columns">
      <%= f.label :rig_upload_image %><br />
      <%= f.file_field :rig_upload_image %>
